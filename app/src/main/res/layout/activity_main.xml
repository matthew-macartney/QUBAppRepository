<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="67dp"
            android:background="#fff1f1f1"
            android:layout_gravity="top"
            android:weightSum="1">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="49dp"
                android:id="@+id/imageView"
                android:src="@drawable/Tags"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Name"
                android:id="@+id/textView"
                android:textColor="#ff313131"
                android:textSize="28dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="8dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="#ff2ba9d3"
            android:backgroundTint="#ff2ba9d3">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="99dp"
                android:id="@+id/imageButton"
                android:src="@drawable/barcode1"
                android:layout_gravity="bottom"
                android:layout_weight="0.27"
                android:background="#ff2ea9d3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="97dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/gps45"
                android:layout_weight="1.57"
                android:layout_gravity="bottom"
                android:background="#ff2ea9d3" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="98dp"
                android:id="@+id/imageButton3"
                android:src="@drawable/wirelessconnectivity14"
                android:layout_gravity="bottom"
                android:layout_weight="0.19"
                android:background="#ff2ea9d3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff2da9d3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iBeacons"
                android:id="@+id/textView7"
                android:background="#ff2da9d3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="15dp"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offers Nearby"
                android:id="@+id/textView6"
                android:background="#ff2da9d3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Barcode"
                android:id="@+id/textView5"
                android:background="#ff2da9d3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:textSize="15dp"
                android:paddingLeft="0dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text="Discounts &amp; Offers"
                android:id="@+id/textView8"
                android:textColor="#ff363636"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:background="#fff1f1f1" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView"
                android:background="#fff1f1f1" >

            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
