<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="OfferDescription"
        android:id="@+id/textViewHistoryDes"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/textViewDate"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textViewHistoryDes"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Received: "
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textViewDate"
        android:layout_alignStart="@+id/textViewHistoryDes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Store"
        android:id="@+id/textViewStore"
        android:layout_below="@+id/textViewHistoryDes"
        android:layout_alignStart="@+id/textViewHistoryDes"
        android:layout_marginTop="7dp" />

</RelativeLayout>